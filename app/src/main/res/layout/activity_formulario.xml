<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioActivity"
    tools:layout_editor_absoluteX="1dp">


        <EditText
            android:id="@+id/etNome"
            android:layout_width="339dp"
            android:layout_height="46dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="@string/txtHintNome"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etNomeMercado"
            android:layout_width="339dp"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/txtHintMarketName"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etValor" />

        <EditText
            android:id="@+id/etValor"
            android:layout_width="339dp"
            android:layout_height="46dp"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:hint="@string/txtHintValor"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNome" />

        <Spinner
            android:id="@+id/spCategorias"
            android:layout_width="339dp"
            android:layout_height="43dp"
            android:layout_marginTop="16dp"
            android:entries="@array/categorias"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNomeMercado" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="201dp"
            android:layout_height="59dp"
            android:layout_marginTop="16dp"
            android:text="@string/txtSalar"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spCategorias" />


</androidx.constraintlayout.widget.ConstraintLayout>
